<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/profileCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:elevation="3dp"
        card_view:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/profileNameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="@string/default_policy_name"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <Switch
                android:id="@+id/profileSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/lastModifiedTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/profileNameTextView"
                android:paddingTop="5dp"
                android:text="@string/last_modified"
                android:textStyle="italic"/>
            <TextView
                android:id="@+id/numberOfDisabledPackagesTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lastModifiedTextView"
                android:paddingTop="5dp"
                android:text="@string/number_packages_disabled"/>
            <TextView
                android:id="@+id/numberOfHostsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberOfDisabledPackagesTextView"
                android:paddingTop="5dp"
                android:text="@string/number_of_hosts"/>
            <TextView
                android:id="@+id/numberOfUserBlockedUrlsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberOfHostsTextView"
                android:paddingTop="5dp"
                android:text="@string/custom_domains_blocked"/>
            <TextView
                android:id="@+id/numberOfUserWhitelistUrlsTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numberOfUserBlockedUrlsTextView"
                android:paddingTop="5dp"
                android:text="@string/number_of_domains_whitelisted"/>
            <TextView
                android:id="@+id/numberOfRestrictedPermissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/numberOfUserWhitelistUrlsTextView"
                android:paddingTop="5dp"
                android:text="@string/number_of_permissions_restricted"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>